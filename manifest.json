{
   "name":"Show All GitHub Issue Comments",
   "version":"1.0",
   "description":"This extension shows all comments in a long GitHub discussion thread.",
   "background":{
      "scripts":[
         "background.js"
      ],
      "persistent":false
   },
   "permissions":[
      "activeTab",
      "declarativeContent"
   ],
   "icons":{
      "128":"icon.png"
   },
   "page_action":{
      "default_icon":"icon.png",
      "default_title":"Show all comments."
   },
   "manifest_version":2
}